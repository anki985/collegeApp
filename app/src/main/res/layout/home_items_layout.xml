<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim_200"
            android:layout_height="@dimen/dim_250"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dim_20"
            android:padding="@dimen/dim_5"
            android:elevation="@dimen/dim_20"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_130"
                    android:layout_marginStart="@dimen/dim_20"
                    android:layout_marginTop="@dimen/dim_30"
                    android:layout_marginEnd="@dimen/dim_20"
                    android:layout_marginBottom="@dimen/dim_20"
                    android:scaleType="fitStart"
                    android:src="@drawable/sneaker1"

                    android:id="@+id/img_sneakers_home"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/itemBottomBackground"
                    android:layout_below="@id/img_sneakers_home">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/home_sneaker"
                        android:textSize="@dimen/dim_40"
                        android:textColor="@color/white"
                        android:id="@+id/textViewOfProduct"
                        android:typeface="serif"
                        android:fontFamily="sans-serif-black"/>
                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>