<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile_fragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_250"
        android:background="@color/themeColor"
        android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/themeColor"
         android:orientation="vertical"
         android:layout_marginTop="@dimen/dim_25"
         android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dim_20"
                android:layout_marginBottom="@dimen/dim_10">
                <ImageView
                    android:layout_width="@dimen/dim_100"
                    android:layout_height="@dimen/dim_100"
                    android:src="@drawable/hardik_pandya_image"
                    android:scaleType="centerCrop"
                    android:id="@+id/userImg"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ankit"
                android:textSize="@dimen/dim_30"
                android:textColor="@color/white"
                android:typeface="serif"
                android:textStyle="bold"
                android:id="@+id/userName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ankit@gmail.com"
                android:textColor="@color/white"
                android:id="@+id/userEmail"/>
     </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Info"
            android:layout_marginTop="@dimen/dim_15"
            android:textSize="@dimen/font_size_30"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_25">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_5"
                android:elevation="@dimen/dim_20">
                <ImageView
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_35"
                    android:src="@drawable/user"
                    android:layout_marginTop="@dimen/dim_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:layout_marginBottom="@dimen/dim_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_20"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:layout_marginTop="@dimen/dim_20"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:textStyle="bold"
                    android:textSize="@dimen/dim_15"
                    android:id="@+id/name_ofuser"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_5"
                android:elevation="@dimen/dim_20">
                <ImageView
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_35"
                    android:src="@drawable/ic_baseline_smartphone_24"
                    android:layout_marginTop="@dimen/dim_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:layout_marginBottom="@dimen/dim_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_20"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+91023008000"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dim_25"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:textSize="@dimen/dim_15"
                    android:id="@+id/edit_text_mobile"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_5"
                android:elevation="@dimen/dim_20">
                <ImageView
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_35"
                    android:src="@drawable/ic_baseline_email_24"
                    android:layout_marginTop="@dimen/dim_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:layout_marginBottom="@dimen/dim_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_20"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="ankit@gmail.com"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dim_25"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:textStyle="bold"
                    android:id="@+id/edit_text_email"
                    android:textSize="@dimen/dim_15"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_5"
                android:elevation="@dimen/dim_20">
                <ImageView
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_35"
                    android:src="@drawable/ic_baseline_location_city_24"
                    android:layout_marginTop="@dimen/dim_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:layout_marginBottom="@dimen/dim_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_20"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="New York, street250"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dim_25"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:textStyle="bold"
                    android:id="@+id/edt_text_location"
                    android:textSize="@dimen/dim_15"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_5"
                android:elevation="@dimen/dim_20">
                <ImageView
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_35"
                    android:src="@drawable/ic_baseline_calendar_month_24"
                    android:layout_marginTop="@dimen/dim_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.O.B"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:layout_marginBottom="@dimen/dim_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_20"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="02/01/1999"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dim_25"
                    android:layout_marginLeft="@dimen/dim_30"
                    android:textStyle="bold"
                    android:id="@+id/edt_text_DOB"
                    android:textSize="@dimen/dim_15"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>