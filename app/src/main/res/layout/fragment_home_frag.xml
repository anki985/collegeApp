<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home_frag">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_200"
        app:cardBackgroundColor="@color/themeColor"
        android:layout_marginTop="@dimen/dim_30"
        android:elevation="@dimen/dim_20"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        app:cardCornerRadius="@dimen/dim_30">
        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200"
            android:id="@+id/imageSlider"
            app:iss_period="2000"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_title_background="@drawable/offer3"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_marginLeft="@dimen/dim_20"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/dim_30"
        android:layout_marginTop="@dimen/dim_260"
        android:id="@+id/category_id"/>

    <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recyclerView"
        android:layout_marginTop="@dimen/dim_320"/>

</RelativeLayout>